<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <a href="/photos/<%= @photo.id %>">
      <img src="<%= @photo.image %>" class="img-responsive">
    </a>

    <!-- Label and input for title -->
    <div class="form-group">
      <label for="title" class="control-label">
        Title
      </label>

      <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @photo.title %>">
    </div>

    <!-- Label and input for description -->
    <div class="form-group">
      <label for="description" class="control-label">
        Description
      </label>

      <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @photo.description %></textarea>
    </div>

    <!-- Label and input for location -->
    <div class="form-group">
      <label for="location" class="control-label">
        Location
      </label>

      <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @photo.location %>">
    </div>

    <!-- Postcards sent -->
    <dt>Postcards sent to recipient:</dt>
    <dd><% @photo.postcards.each do |recipient| %>
      <%= recipient.recipient_id %>

    <% end %>
  </dd>



    <!-- Label and input for user_id -->
    <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">



    <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-default">
        <i class="fa fa-chevron-left"></i>
      </a>
      <% if current_user.id == @photo.user_id %>
      <a href="/photos/<%= @photo.id %>/edit" class="btn btn-default">
        <i class="fa fa-edit"></i>
      </a>
      <a href="/delete_photo/<%= @photo.id %>" class="btn btn-default" rel="nofollow">
        <i class="fa fa-trash-o"></i>
      </a>
      <% end %>

    </div>
  </div>

  <div class="col-md-8 col-md-offset-2">
    <a href="/postcards/new" class="btn btn-primary btn-block">
      Send a Postcard :)
    </a>

    <hr>
  </div>
</div>
