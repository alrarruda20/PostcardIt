<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <!-- Validation failure messages -->
    <% if @photo.errors.any? %>
    <% @photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
    <% end %>
    <% end %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Add Photo
        </h3>
      </div>

      <div class="panel-body">
        <form action="/create_photo" method="post" enctype="multipart/form-data">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for title -->
          <div class="form-group">
            <label for="title" class="control-label">
              Title
            </label>

            <input type="text" id="title" name="title" placeholder="Add a title..." class="form-control" value="<%= @photo.title %>">
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="control-label">
              Description
            </label>

            <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @photo.description %></textarea>
          </div>

          <!-- Label and input for location -->
          <div class="form-group">
            <label for="location" class="control-label">
              Location
            </label>

            <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @photo.location %>">
          </div>


          <!-- Label and input for image -->
          <div class="form-group">
            <label for="image" class="control-label">
              Image
            </label>

            <input type="file" id="image" name="image" placeholder="Add a URL..." class="form-control" value="<%= @photo.image %>">
          </div>

          <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">

          <div class="form-group">
            <button class="btn btn-success btn-block">
              Create Photo
            </button>
          </div>


          <div class="form-group">
              <a href="/photos" class="btn btn-link btn-block">
                Cancel
              </a>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
