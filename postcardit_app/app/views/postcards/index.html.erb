<div class="page-header">
  <h1>
    Postcards
    <a href="/postcards/new" class="btn btn-lg btn-success">New Postcard</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Message</th>
        <th>Photo</th>
        <th>Recipient</th>
        <th>Actions</th>
      </tr>

      <% @postcards.each do |postcard| %>
      <tr>
        <td><%= postcard.message %></td>
        <td><%= postcard.photo_id %></td>
        <td><%= postcard.recipient_id %></td>
        <td>
          <a href="/postcards/<%= postcard.id %>" class="btn btn-primary">Show</a>
          <a href="/postcards/<%= postcard.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_postcard/<%= postcard.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
