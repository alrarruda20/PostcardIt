<div class="col-md-8 col-md-offset-4" class="page-header">
  <h2>
    Recipients
    <a href="/recipients/new" class="btn btn-default ">
    <i class="fa fa-plus"></i></a>
  </h2>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>

      <% @recipients.each do |recipient| %>
      <tr class="panel panel-default">
        <td><%= recipient.name %></td>
        <td><%= recipient.email %></td>
        <td>
          <a href="/recipients/<%= recipient.id %>" class="btn btn-default">View</a>
        </td>
      </tr>
      <% end %>
    </table>
    <div class="col-md-8 col-md-offset-2">
      <a href="/postcards/new" class="btn btn-primary btn-block">
        Send Postcard :)
        </a>

      <hr>
    </div>
  </div>

</div>
