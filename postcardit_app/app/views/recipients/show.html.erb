<div class="page-header">
  <h3>Recipient: <%= @recipient.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Name</dt>
      <dd><%= @recipient.name %></dd>

      <dt>Address</dt>
      <dd><%= @recipient.address %></dd>

      <dt>Email</dt>
      <dd><%= @recipient.email %></dd>

    </dl>


    <a href="/postcards/new" class="btn btn-primary btn-block">
      Send Postcard :)
    </a>

    <div class="btn-group btn-group-justified">
      <a href="/recipients" class="btn btn-default">
        <i class="fa fa-chevron-left"></i>
      </a>
      <a href="/recipients/<%= @recipient.id %>/edit" class="btn btn-default">
        <i class="fa fa-edit"></i>
      </a>
      <a href="/delete_recipient/<%= @recipient.id %>" class="btn btn-default" rel="nofollow">
        <i class="fa fa-trash-o"></i>
      </a>
    </div>
  </div>
</div>
